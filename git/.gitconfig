[user]
	# TODO: fill in your details
	name = YOUR_NAME_HERE
	email = YOUR_EMAIL_HERE

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[core]
	editor = vim
	pager = delta --light

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = true
	side-by-side = false

[merge]
	conflictstyle = zdiff3

[diff]
	colorMoved = default

[alias]
	st = status
	co = checkout
	br = branch
	cm = commit
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

