# Brewfile — macOS development environment
# Install with: brew bundle

# ── Terminal & Shell ─────────────────────────────────
brew "zsh-autosuggestions"
brew "zsh-syntax-highlighting"
brew "starship"

# ── Modern CLI Tools ────────────────────────────────
brew "eza"
brew "zoxide"
brew "ripgrep"
brew "fd"
brew "git-delta"

# ── Applications ────────────────────────────────────
cask "wezterm"

# ── Fonts ───────────────────────────────────────────
cask "font-jetbrains-mono-nerd-font"
